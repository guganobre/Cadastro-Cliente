@model ClienteViewModel
@{
    ViewData["Title"] = "Editar Cliente";
}

<h1>Atualizar Cliente - @Model.Nome</h1>

<hr />
<!-- Exibe a mensagem de erro, se houver -->
@if (ViewBag.Error != null)
{
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-danger" id="displayMensagem">@ViewBag.Error</div>
        </div>
    </div>
    <script>
        setTimeout(function() {
            $('#displayMensagem').fadeOut();
        }, 5000);
    </script>
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="Editar">
            @{
                Html.RenderPartial("_CadastroCliente", model: Model);
            }
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
